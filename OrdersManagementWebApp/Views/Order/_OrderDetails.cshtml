@model OrderViewModel

<div>
    <p><strong>Номер заказа:</strong> @Model.Id</p>
    <p><strong>Город отправителя:</strong> @Model.SenderCity</p>
    <p><strong>Адрес отправителя:</strong> @Model.SenderAddress</p>
    <p><strong>Город получателя:</strong> @Model.RecipientCity</p>
    <p><strong>Адрес получателя:</strong> @Model.RecipientAddress</p>
    <p><strong>Вес:</strong> @Model.Weight кг</p>
    <p><strong>Дата забора:</strong> @Model.ExpirationDate.ToString("d")</p>
</div>